# ===========================================
# IPAM System Environment Configuration
# ===========================================
# Copy this file to .env and update values

# ----- Database Configuration -----
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_PASSWORD=change_this_phpipam_password
MYSQL_DATABASE=phpipam
MYSQL_USER=phpipam

# ----- Application Settings -----
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ipam.example.com
TZ=UTC

# ----- Web Server Ports -----
HTTP_PORT=80
HTTPS_PORT=443

# ----- Active Directory Configuration -----
AD_ENABLED=false
AD_SERVER=ldap://ad.example.com
AD_BASE_DN=dc=example,dc=com
AD_BIND_USER=phpipam_bind@example.com
AD_BIND_PASSWORD=change_this_ad_password
AD_USE_TLS=true
AD_ADMIN_GROUP=IPAM-Admins
AD_USER_GROUP=IPAM-Users

# ----- Scanner Configuration -----
SCAN_INTERVAL=300
SCAN_TIMEOUT=2
SCAN_CONCURRENT=50

# ----- Redis Configuration -----
REDIS_HOST=redis
REDIS_PORT=6379

# ----- Network Intelligence -----
AD_SYNC_INTERVAL=14400
AD_STALE_THRESHOLD_DAYS=30
DNS_CHECK_INTERVAL=3600
DNS_SERVERS=
DHCP_ENABLED=false
DHCP_SERVER_TYPE=kea
DHCP_ACCESS_METHOD=file
DHCP_LEASE_FILE=
DHCP_DB_HOST=
DHCP_DB_USER=
DHCP_DB_PASSWORD=
DHCP_DB_NAME=
DHCP_SYNC_INTERVAL=600
ALERT_WEBHOOK_URL=
